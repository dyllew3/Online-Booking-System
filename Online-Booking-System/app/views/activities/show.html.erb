<div class="container">
<p>
  <div class="image-2">
  <%= image_tag(@activity.image_link.to_s) %>
  </div>
</p>


<p class="text">
  <strong>Activity:</strong>
  <%= @activity.ActivityName %>
</p>
</div>

<p class="text">

  <strong>Teacher:</strong>
  <%= @activity.ResponsibleTeacher %>
</p>

<p class="text">
  <strong>Description:</strong>
  <%= @activity.Description %>
</p>

<p class="text">
  <strong>Age Group:</strong>
  <%= StudentClass.find(@activity.StartClassSuitability).StudentClass %>
</p>

<p class="text">
  <normal>to:</normal>
  <%= StudentClass.find(@activity.EndClassSuitability).StudentClass %>
</p>

<p class="text">
  <strong>Start Date:</strong>
  <%= @activity.StartDate.strftime("%d-%m-%y") %>
</p>

<p class="text">
  <strong>End Date:</strong>
  <%= @activity.EndDate.strftime("%d-%m-%y") %>
</p>

<p class="text">
  <strong>Start Time:</strong>
  <%= @activity.StartTime.strftime("%H:%M") %>
</p>

<p class="text">
  <strong>End Time:</strong>
  <%= @activity.EndTime.strftime("%H:%M") %>
</p>

<p class="text">
  <strong>Capacity:</strong>
  <%= @activity.NoOfChildren %>

</p>

</div>


<div class="button">
	<div id="button1">
	<%if logged_in? and  current_user.admin == true  %>
	<%= link_to 'Applications for Activity', activity_applications_path(@activity) %>
	<% else %>
	<%= link_to 'Apply for Activity', activity_applications_path(@activity) %>
	<% end %>
	</div>
</div>
<%if logged_in? and  current_user.admin == true  %>
<div class="button">
	<div id="button1">
	
	<%= link_to 'Edit', edit_activity_path(@activity) %>
	
	</div>
</div>
<% end %>
<div class="button">
	<div id="button1">
	<%= link_to 'Back', activities_path %>
	</div>
</div>
