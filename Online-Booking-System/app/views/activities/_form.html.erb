<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% @activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :ActivityName, "Activity Name"%><br>
    <%= f.text_area :ActivityName, class: 'input-box' %>
  </div>

  <div class="field">
    <%= f.label :ResponsibleTeacher, "Responsible Teacher" %><br>
    <%= f.collection_select(:ResponsibleTeacher, User.where("userable_type = 'Teacher'").all, :userable_id, :first_last_name, {}, {:class => 'input-box'}) %>
  </div>
  <div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :Description, class: 'input-box' %>
  </div>
  <div class="field">
    <%= f.label :StartClassSuitability, "Age Group Start" %><br>
    <%= f.collection_select(:StartClassSuitability, StudentClass.all, :id, :StudentClass, {}, {:class => 'input-box'}) %>
  </div>
  <div class="field">
    <%= f.label :EndClassSuitability, "Age Group End" %><br>
    <%= f.collection_select(:EndClassSuitability, StudentClass.all, :id, :StudentClass, {}, {:class => 'input-box'}) %>
  </div>
  <div class="field">
    <%= f.label :StartDate, "Start Date" %><br>
    <span class="dropdown-box"><%= f.date_select :StartDate %></span>
  </div>
  <div class="field">
    <%= f.label :EndDate, "End Date" %><br>
    <span class="dropdown-box"><%= f.date_select :EndDate %></span>
  </div>
  <div class="field">
    <%= f.label :StartTime, "Start Time" %><br>
    <span class="dropdown-box1"><%= f.time_select :StartTime%></span>
  </div>
  <div class="field">
    <%= f.label :EndTime, "End Time" %><br>
    <span class="dropdown-box1"><%= f.time_select :EndTime %></span>
  </div>
  <div class="field">
    <%= f.label :NoOfChildren, "Capacity" %><br>
    <%= f.number_field :NoOfChildren, class: 'input-box' %>
  </div>
	<div class="field">
	<%= f.label :picture%>
	<%=f.file_field :picture, class:'browse' %>
	</div>

  <div>
    <%= f.submit "Create Activity", class:'button' %>
  </div>
<% end %>
