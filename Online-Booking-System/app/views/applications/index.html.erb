<p id="notice"><%= notice %></p>

<h1>Listing Applications</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.student_id %></td>
        <td><%= application.activity_id %></td>
        <td><%= link_to 'Show', [application.activity,application] %></td>
        <td><%= link_to 'Edit', edit_activity_application_path(application.activity,application) %></td>
        <td><%= link_to 'Destroy', [application.activity,application], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if activity_full?(@activity,@applications) %>
<%= link_to 'New Application', new_activity_application_path %>
<% else %>
<p>
  <strong>Activity has been Filled</strong>
 </p>
<% end %>
