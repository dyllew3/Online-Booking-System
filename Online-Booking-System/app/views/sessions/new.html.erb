<% provide(:title,"Log in")  %>
<h1>Log in</h1>
<h2><%= flash[:message]    %></h2>


<div>
  <%= form_for(:session, url: login_path) do |f|  %>

	<p><%= f.label :email, class:'heading' %><br></p>
	<p><%= f.email_field :email, class: 'email-control' %><br></p>

	<p><%= f.label :password, class:'heading' %><br></p>
	<p><%= f.password_field :password, class: 'password-control' %><br></p>

	<p><%= f.submit "Log in", class: "btn btn-primary" %></p>
  <% end %>
</div>
<div>
    <p class="end-link">New user? <%= link_to "Sign up now!",register_path %></p>
</div>
