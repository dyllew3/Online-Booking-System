<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>


<p><div class="new-student">
<p><%= link_to 'New Student', new_student_path %></p
</div></p>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <div>
   <p> <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.StudentClass.StudentClass %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Applied for Activities', :action => :activity, :id => student.id %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %></p>
  </div>
  </tbody>
</table>

<br>

