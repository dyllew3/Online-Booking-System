<h1>Listing Parents</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email Address</th>
      <th>Phone Number</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <p><% @parents.each do |parent| %>
      <tr>
        <td><%= parent.user.first_name %></td>
        <td><%= parent.user.last_name %></td>
        <td><%= parent.user.email %></td>
        <td><%= parent.phone_num %></td>
        <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
        <td><%= link_to 'Delete', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %></p>
  </tbody>
</table>

<br>

